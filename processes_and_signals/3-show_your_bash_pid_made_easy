#!/usr/bin/env bash
# Display PID and process name for processes containing 'bash' without using ps
find /proc -maxdepth 1 -type d -name '[0-9]*' -exec bash -c '
    for pid; do
        if [[ -f "$pid/comm" ]]; then
            comm=$(cat "$pid/comm" 2>/dev/null)
            if [[ "$comm" == *bash* ]]; then
                echo "${pid##*/} $comm"
            fi
        fi
    done
' bash {} +
